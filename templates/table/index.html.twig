{% extends 'base.html.twig' %}

{% block title %}Hello TableController!{% endblock %}

{% block body %}
    {% for table in tables%}
        <div class="table-container">
            <p>{{table.name}}</p>
            <p>{{table.minBet}}</p>
            <p>{{table.maxBet}}</p>
            <p>{{table.nbDecks}}</p>
            <div>
                <p><a href="{{path("create_game", {id: table.id}) }}"> Jouer Ã  la table </a></p>
            </div
            
            
            {% if app.user and is_granted("ROLE_ADMIN")%}
                <div>
                    <p><a href="{{path("edit_table", {id: table.id}) }}"> Modifier la table </a></p>
                    <p><a href="{{path("delete_table", {id: table.id}) }}"> Supprimer la table </a></p>
                    
                </div>
            {% endif %}
        </div>
    {% endfor %}
    <div class="balance">
        <div class="balance-container">
            <p><b>balance: {{balance}}</b></p>
        </div>
    </div>
{% endblock %}
